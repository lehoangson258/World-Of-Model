<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layouts/head.ejs'); -%>
</head>

<body>

    <div class="container">
        <%- include('layouts/navbar.ejs'); -%>
    </div>
    </div>

    <!---------- All products ---------->
    <div class="small-container">
        <%- include('layouts/brand') -%>
        <div class="row row-2">
            <h2>All Products</h2>
        </div>

        <div class="row">
            <% for(let product of products) {%>
            <div class="col-4">
                <a href="/products/details/<%= product._id %>">
                    <img src="/static/image/<%= product.image[0]%>">
                </a>
                <a href="/products/details/<%= product._id %>">
                    <h4><%= product.title %></h4>
                </a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p>$<%= product.price %>.00</p>
            </div>
            <%}%>
        </div>


        <!---------------page number------------->
        <%- include('layouts/pagination.ejs', {namePage: 'products'}) -%>

    </div>

            <!----------------footer----------------->
            <%- include('layouts/footer.ejs'); -%>
            <!--------------js for toggle menu-------------->
            <script src="/static/client/js/main.js"></script>
</body>

</html>