                <a href="/products/details/<%= item._id %>"><img src="/static/image/<%= item.image[0] %>"></a>
                <a href="/products/details/<%= item._id %>">
                    <h4><%= item.title %></h4>
                </a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p>$<%= item.price %>.00</p>
            </div>
            <%}%>
        </div>

        <!----------------------------------- deluxe products -------------------------------------->

        <h2 class="title">Deluxe Products</h2>

        <div class="row">
            <% for(let item of deLuxe) {%>
            <div class="col-4">
                <a href="/products/details/<%= item._id %>"><img src="/static/image/<%= item.image[0] %>"></a>
                <a href="/products/details/<%= item._id %>">
                    <h4><%= item.title %></h4>
                </a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p>$<%= item.price %>.00</p>
            </div>
            <%}%>
        </div>

        <!--------------------------------- Latest Products --------------------------------->
        <h2 class="title">Latest Products</h2>

        <div class="row">
            <% for(let item of laTest) {%>
            <div class="col-4">
                <a href="/products/details/<%= item._id %>"><img src="/static/image/<%= item.image[0] %>"></a>
                <a href="/products/details/<%= item._id %>">
                    <h4><%= item.title %></h4>
                </a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p>$<%= item.price %>.00</p>
            </div>
            <%}%>
        </div>
    </div>
    
    <!------------------------------------ offer ------------------------------------->
    <div class="offer">
        <div class="small-container">
            <div class="row">
                <% for (let item of marVel) {%>
                <div class="col-2">
                    <a href="/products/details/<%= item._id %>"><img src="/static/image/<%= item.image[0] %>" class="offer-img"></a>
                </div>
                <div class="col-2">
                    <!-- <div class="space"></div> -->
                    <p class="space">Pre-Order</p>
                    <h1><%= item.title %></h1>
                    <small><%= item.description %></small>
                    <br>
                    <a href="/products/details/<%= item._id %>" class="btn">Order Now &#8594;</a>
                </div>
                <%}%>
            </div>
        </div>
    </div>

    <!---------------------------------------buyer--------------------------------------->
