<!DOCTYPE html>
<html>
<!-- /.header -->
<%- include('layouts/head', {title: 'Category Management'}); -%>

<body>
	<!--/.navbar -->
	<%- include('layouts/navbar'); -%>

	<!--/.sidebar-->
	<%- include('layouts/sidebar'); -%>
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li>
					<a href="#">
						<svg class="glyph stroked home">
							<use xlink:href="#stroked-home"></use>
						</svg>
					</a>
				</li>
				<li class="active">Category List</li>
			</ol>
		</div>
		<!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Category List</h1>
			</div>
		</div>
		<!--/.row-->
		<div id="toolbar" class="btn-group">
			<a href="/admin/category/add" class="btn btn-success">
				<i class="glyphicon glyphicon-plus"></i> Add Category
			</a>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<table data-toolbar="#toolbar" data-toggle="table">
							<thead>
								<tr>
									<th data-field="id" data-sortable="true">#</th>
									<th>Brand Name</th>
									<th>Status</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody><% var i = 0%>
								<% for (let category of categories) {%>
								<tr>
									<td><%= ++i %></td>
									<td><%= category.name%></td>
									<td>
										<% if(category.status === 'ACTIVE') {%>
										<span class="label label-success"><%= category.status%></span>
										<% } else if(category.status === 'PENDING') {%>
										<span class="label label-warning"><%= category.status%></span>
										<%} else {%>
										<span class="label label-danger"><%= category.status%></span>
										<%}%>
									</td>
									<td class="form-group">
										<a href="/admin/category/edit/<%= category._id %>" class="btn btn-primary"><i
											class="glyphicon glyphicon-pencil"></i></a>
										<a href="/admin/category/delete/<%= category._id %>" class="btn btn-danger"><i
												class="glyphicon glyphicon-remove"></i></a>
									</td>
								</tr>
								<%}%>
								</tbody>
							</table>
						</div>
            <%- include('layouts/pagination', { namepage: "category" }); -%>
					</div>
				</div>
			</div>
			<!--/.row-->
		</div>
		<!--/.main-->

		<%-include('layouts/script'); -%>
</body>

</html>