    <!-----------------------------------------brands------------------------------------>
    <%- include('layouts/brand') -%>
    <!--------------------------------------footer-------------------------------->
    <%- include('layouts/footer.ejs'); -%>

    <!--------------js for toggle menu-------------->
    <script src="/static/client/js/main.js"></script>
</body>

</html>