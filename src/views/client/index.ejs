<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layouts/head.ejs'); -%>
</head>

<body>

    <div class="header">
        <div class="container">

            <%- include('layouts/navbar.ejs'); -%>

            <div class="row">
                <div class="col-2">
                    <div class="space1">
                        <h1>Welcome to
                            <br>WORLD OF MODEL
                            <br>Place your order now!
                        </h1>
                        <p>Buy it now or regret later.</p>
    
                        <a href="/products" class="btn">Buy Now &#8594;</a>
                    </div>
                </div>

                <div class="col-2">
                    <img src="/static/image/image4.png" alt="back-ground">
                </div>
            </div>
        </div>
    </div>

    <!---------- featured categories ---------->
    <div class="categories">
        <div class="small-container">
            <div class="row">
                <div class="col-3">
                    <img src="/static/image/category-superman.jpg" alt="mau hang">
                </div>
                <div class="col-3">
                    <img src="/static/image/category-iron man.jpg" alt="mau hang 2">
                </div>
                <div class="col-3">
                    <img src="/static/image/category-john wich.jpg" alt="mau hang 3">
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </div>

    <!---------------------------Hottoys products -------------------------->
    <div class="small-container">
        <h2 class="title">Hot Toys Products</h2>

        <div class="row">
            <% for(let item of hotToys) {%>
            <div class="col-4">
                <a href="/products/details/<%= item._id %>"><img src="/static/image/<%= item.image[0] %>"></a>
                <a href="/products/details/<%= item._id %>">
                    <h4><%= item.title %></h4>
                </a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p>$<%= item.price %>.00</p>
            </div>
            <%}%>
        </div>

        

        <!-------------------------------- hasbro products --------------------------->

        <h2 class="title">Hasbro Pulse Products</h2>

        <div class="row">
            <% for(let item of hasbroPulse) {%>
            <div class="col-4">
                <a href="/products/details/<%= item._id %>"><img src="/static/image/<%= item.image[0] %>"></a>
                <a href="/products/details/<%= item._id %>">
                    <h4><%= item.title %></h4>
                </a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p>$<%= item.price %>.00</p>
